{
  "name": "nuvho-hotelcrm-backend",
  "version": "1.0.0",
  "description": "Backend API for Nuvho HotelCRM system with MySQL database integration and AI-powered search capabilities",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:ai": "node tests/testAI.js",
    "test:db": "node -e \"require('./config/database').testConnection()\"",
    "db:init": "node scripts/initDatabase.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "setup:embeddings": "node scripts/setupEmbeddings.js",
    "setup:check": "node scripts/setupEmbeddings.js --check",
    "deploy": "bash deploy.sh"
  },
  "keywords": [
    "hotel",
    "crm",
    "hospitality",
    "api",
    "mysql",
    "nodejs",
    "express",
    "ai",
    "vector-search",
    "embeddings",
    "semantic-search"
  ],
  "author": "Nuvho Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "@pinecone-database/pinecone": "^3.0.0",
    "openai": "^4.28.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nuvho/hotelcrm-backend.git"
  },
  "bugs": {
    "url": "https://github.com/nuvho/hotelcrm-backend/issues"
  },
  "homepage": "https://github.com/nuvho/hotelcrm-backend#readme"
}